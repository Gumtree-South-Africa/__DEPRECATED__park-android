<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">

            <corners android:radius="6dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#D8D8D8" />

        </shape>
    </item>

    <!-- Solid color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/new_light_gray" />
            <!--<stroke android:width="1dp" android:color="#4DD8D8D8" />-->
            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>
