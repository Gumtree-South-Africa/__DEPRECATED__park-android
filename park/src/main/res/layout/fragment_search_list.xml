<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_category_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/item_detail_field_horizontal_separation"
        android:textAllCaps="true"
        android:textColor="@color/item_detail_category_label_text_color"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.android.photos.views.HeaderGridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/item_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/GrayBackground"
            android:horizontalSpacing="-6dp"
            android:numColumns="3"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:clipToPadding="false"
            android:verticalSpacing="6dp"></com.android.photos.views.HeaderGridView>

        <include layout="@layout/empty_view" />

    </FrameLayout>

</LinearLayout>